{
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["*"],
      "@core/*": ["core/*"],
      "@modules/*": ["modules/*"],
      "@types/*": ["types/*"],
      "@hooks/*": ["hooks/*"],
      "@store/*": ["store/*"],
      "@services/*": ["services/*"],
      "@utils/*": ["core/utils/*"]
    }
  },
  "include": ["src"]
}
